rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // 1. Default: Block everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }

    // 2. Evidence Folder: Secure Access
    match /evidence/{fileName} {
      
      // READ: Allow only logged-in users to view videos
      allow read: if request.auth != null;
      
      // WRITE: Strict checks for uploads
      allow write: if request.auth != null                   // Must be logged in
                   && request.resource.size < 700 * 1024 * 1024 // Max size: 700MB
                   && request.resource.contentType.matches('video/.*'); // Must be a video file
    }
  }
}